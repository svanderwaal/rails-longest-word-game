<h1>New game</h1>
<% @letters.each do |letter| %>
<div class=boxes> <%= letter %></div>
<% end %>
<div><br>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" class=question>
    <input class=longer type="text" name="word" placeholder="What is your word?">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letter_options, @letters %>
  </form>
</div>
